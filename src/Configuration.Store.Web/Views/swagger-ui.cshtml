@model SwaggerViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Configuration store swagger UI</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Source+Code+Pro:300,600|Titillium+Web:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/swagger/themes/theme-newspaper.css">
    <link rel="icon" type="image/png" href="~/Styles/swagger/images/favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="~/Styles/swagger/images/favicon-16x16.png" sizes="16x16" />
    <style>
        html {
            box-sizing: border-box;
            overflow: -moz-scrollbars-vertical;
            overflow-y: scroll;
        }

        *,
        *:before,
        *:after {
            box-sizing: inherit;
        }

        body {
            margin: 0;
            background: #fafafa;
        }
    </style>
</head>
<body>
    <div id="swagger-ui"></div>

    <script src="~/Scripts/lib/swagger/swagger-ui-bundle.js"> </script>
    <script src="~/Scripts/lib/swagger/swagger-ui-standalone-preset.js"> </script>
    <script>

        window.onload = function() {

          // Build a system
          const ui = SwaggerUIBundle({
            url: "@Model.ApiDocsPath.ToString()",
            dom_id: '#swagger-ui',
            deepLinking: true,
            presets: [
              SwaggerUIBundle.presets.apis,
              SwaggerUIStandalonePreset
            ],
            plugins: [
              SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: "StandaloneLayout"
          })

          window.ui = ui
        }
    </script>
</body>
</html>